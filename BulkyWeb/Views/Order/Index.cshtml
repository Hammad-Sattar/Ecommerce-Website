@using Bulky.Models.Models
@model List<OrderHeader>



<div class="container pt-5">
    
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary fw-bold">Order List</h2>
        </div>
       
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="col-1">ID</th>
                        <th class="col-1">Name</th>
                        <th class="col-1">Phone Number</th>
                        <th class="col-1">Order Date</th>
                        <th class="col-1">Status</th>
                        <th class="col-1">Total</th>
                         <th class="col-1 text-center">Action</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                        {
                           
                        <tr>
                            <td>
                                @obj.Id
                            </td>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.ApplicationUser.PhoneNumber
                            </td>
                            <td>
                                @obj.OrderDate
                            </td>
                            <td>

                                @obj.OrderStatus
                            </td>
                            <td>

                                @obj.OrderTotal.ToString("c")
                            </td>
                            <td >
                               
                                    <a asp-controller="Order" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-sm btn-primary mx-2 rounded-pill hover-effect"> @* <i class="bi bi-pencil-fill"></i> *@ Proceeed</a>
                                    @* <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger mx-2 rounded-pill hover-effect text"> <i class="bi bi-trash"></i> Delete</a> *@
                               
                            </td>

                        </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>