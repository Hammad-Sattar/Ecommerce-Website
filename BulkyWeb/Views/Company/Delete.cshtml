@using Bulky.Models.Models
@model Company


<form method="post">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="p-3 m-4 bg-white rounded shadow-sm">
                <div class="row pb-2">
                    <h2 class="text-primary fw-bold">Create Product</h2>
                    <hr />
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 row p-0">
                    <label asp-for="Name" class="p-0 fw-bold"></label>
                    <input asp-for="Name" type="text" disabled class="form-control rounded-pill" />
                    <Span asp-validation-for="Name" class=" text-danger"></Span>
                </div>
                <div class="mb-3 row  row p-0">
                    <label asp-for="StreetAddress" class="p-0 fw-bold"></label>
                    <input asp-for="StreetAddress" type="text" disabled class="form-control rounded-pill" />
                    <Span asp-validation-for="StreetAddress" class=" text-danger"></Span>
                </div>
                <div class="mb-3 row  row p-0">
                    <label asp-for="City" class="p-0 fw-bold"></label>
                    <input asp-for="City" type="text" disabled class="form-control rounded-pill" />
                    <Span asp-validation-for="City" class=" text-danger"></Span>
                </div>
                <div class="mb-3 row  row p-0">
                    <label asp-for="State" class="p-0 fw-bold"></label>
                    <input asp-for="State" type="text" disabled class="form-control rounded-pill" />
                    <Span asp-validation-for="State" class=" text-danger"></Span>
                </div>
                <div class="mb-3 row  row p-0">
                    <label asp-for="PostalCode" class="p-0 fw-bold"></label>
                    <input asp-for="PostalCode" type="text" disabled class="form-control rounded-pill" />
                    <Span asp-validation-for="PostalCode" class=" text-danger"></Span>
                </div>
                <div class="mb-3 row  row p-0">
                    <label asp-for="PhoneNumber" class="p-0 fw-bold"></label>
                    <input asp-for="PhoneNumber" type="text" disabled class="form-control rounded-pill" />
                    <Span asp-validation-for="PhoneNumber" class=" text-danger"></Span>
                </div>

                <div class="row">
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-danger form-control rounded-pill hover-effect">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-secondary border form-control rounded-pill hover-effect">
                                <i class="bi bi-arrow-left"></i> Back To List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}