@model Category


<h1 class="text-success fw-bold">Edit Category</h1>

<form method="post">
    <input asp-for="Id" hidden />
    <div class="p-3 m-4 bg-white rounded shadow-sm">
        <div class="row pb-2">
           
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 row p-0">
            <label asp-for="Name" class="p-0 fw-bold"></label>
            <input asp-for="Name" type="text" class="form-control rounded-pill" />
            <Span asp-validation-for="Name" class=" text-danger"></Span>
        </div>
        <div class="mb-3 row  row p-0">
            <label asp-for="Displayorder" class="p-0 fw-bold"></label>
            <input asp-for="Displayorder" type="text" class="form-control rounded-pill" />
            <Span asp-validation-for="Displayorder" class=" text-danger"></Span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-success form-control rounded-pill hover-effect">
                    <i class="bi bi-pencil"></i> Update
                </button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control rounded-pill hover-effect">
                    <i class="bi bi-arrow-left"></i> Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}